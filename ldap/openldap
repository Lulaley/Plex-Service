/var/log/openldap.log {
    daily
    rotate 10
    missingok
    notifempty
    compress
    dateext
    dateyesterday
    delaycompress
    sharedscripts
    postrotate
    # reload syslog
        /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
        /bin/kill -HUP `cat /var/run/rsyslogd.pid 2> /dev/null` 2> /dev/null || true
    endscript
}